{
	"preset": "ts-jest/presets/js-with-ts",
	"rootDir": "./src",
	"globals": {
		"ts-jest": {
			"tsconfig": "../tsconfig.test.json"
		}
	},
	"transformIgnorePatterns": [ "/node_modules", "/build/" ],
	"restoreMocks": true,
	"testMatch": [
		"**/__tests__/**/*.[jt]s?(x)",
		"**/test/*.[jt]s?(x)",
		"**/?(*.)test.[jt]s?(x)"
	],
	"transform": {
		"^.+\\.[jt]sx?$": "ts-jest"
	},
	"testPathIgnorePatterns": [
		"/node_modules/",
		"<rootDir>/.*/build/",
		"<rootDir>/.*/build-module/",
		"<rootDir>/tests/e2e/"
	],
	"testEnvironment": "jest-environment-jsdom-sixteen",
	"timers": "modern",
	"verbose": true
}
