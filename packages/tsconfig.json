{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "react",
		"jsxFactory": "createElement",
		"jsxFragmentFactory": "Fragment"
	},
	"exclude": [
		"node_modules",
		"build",
		"build-module",
		"**/test/*"
	]
}
