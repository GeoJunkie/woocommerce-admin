{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"incremental": true
	},
	"exclude": [
		"node_modules",
		"**/build",
		"**/build-module",
		"**/test/*",
		"**/jest.config.js"
	]
}
